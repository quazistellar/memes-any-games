<Window x:Class="laba5_wpff.View.Clicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba5_wpff.View"
        mc:Ignorable="d"
        Title="Clicker" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Countdown Timer: " FontSize="16"/>
            <TextBlock Text="{Binding Seconds}" FontSize="16"/>
            <TextBlock Text="Clicks: " FontSize="16"/>
            <TextBlock Text="{Binding Clicks}" FontSize="16"/>
            <TextBlock Text="Clicks Per Minute: " FontSize="16"/>
            <TextBlock Text="{Binding ClicksPerMinute}" FontSize="16"/>
            <Button Content="Click" Command="{Binding ClickCommand}" FontSize="16" Margin="10" IsEnabled="{Binding ClickCommandEnabled}"/>
        </StackPanel>
    </Grid>
</Window>
