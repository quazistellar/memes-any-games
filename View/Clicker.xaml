<Window x:Class="laba5_wpff.View.Clicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba5_wpff.View"
        mc:Ignorable="d"
        Title="Clicker" Height="400" Width="420" Background="#FF9899F4" Icon="tanos.png">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Таймер: " FontSize="16" FontFamily="Arial Black"/>
            <TextBlock Text="{Binding Seconds}" FontSize="16"/>
            <TextBlock Text="Клики: " FontSize="16" FontFamily="Arial Black"/>
            <TextBlock Text="{Binding Clicks}" FontSize="16"/>
            <TextBlock Text="Клики в минуту: " FontSize="16" FontFamily="Arial Black"/>
            <TextBlock Text="{Binding ClicksPerMinute}" FontSize="16"/>
            <Button Content="click" Command="{Binding ClickCommand}" FontSize="16" Margin="10" IsEnabled="{Binding ClickCommandEnabled}" FontFamily="Arial Black" Background="#FFCB70F8"/>
            <Button Content="выход" FontSize="16" Margin="10" FontFamily="Arial Black" Background="#FFCB70F8" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
